@{
    Layout = "~/Views/Shared/NoHeader.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In As - Exam Scheduling System</title>
</head>
<body style="background-image: url('@Url.Content("~/image/back.jpg")'); background-repeat:no-repeat; background-size:cover; background-position:center;">

    <div class="container-fluid min-vh-100 d-flex align-items-center">
        <div class="row w-100">
          
            <div class="col-md-6 text-start">
                <h3 class="text-white mt-5 ms-4">Prince Al-hussein Bin Abdullah II Faculty For Information Technology</h3>
                <h3 class="text-white ms-4" style="margin-top: 2cm;">Exam Scheduling System</h3>
            </div>

            <div class="col-md-5 d-flex flex-column align-items-end justify-content-center">
                <div class="d-flex flex-column align-items-center w-100">
                    <h3 class="text-white">Log in as:</h3>
                    <a href="@Url.Action("FacultyLogin", "Home", new { role = "Faculty" })" class="btn btn-primary btn-lg mb-3 w-50">Faculty</a>
                    <a href="@Url.Action("Login", "Home", new { role = "Student" })" class="btn btn-primary btn-lg mb-3 w-50">Student</a>
                    <a href="@Url.Action("FacultyLogin", "Home", new { role = "Admin" })" class="btn btn-primary btn-lg mb-3 w-50">Admin</a>
                    <a href="@Url.Action("Guest", "Home", new { role = "Guest" })" class="btn btn-secondary btn-lg mb-3 w-50">Enter as Guest</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
